/* pages/index/reportDetails/index.wxss */
.reportDetailsWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reportDetails {
  width: 97%;
}

.con {
  display: flex;
  flex-direction: row-reverse;
}

.con .orderDate {
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border: 1px solid #c9c9c9;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.con .orderDate picker {
  width: 230rpx;
  height: 100%;
  float: left;
  padding-left: 25rpx;
}

.con .orderDate image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.echartsWrap {
  width: 100%;
  height: 700rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.ec_canvas {
  width: 100%;
  height: 100%;
}

.btnWrap {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 50rpx;
  margin-top: 20rpx;
}

.beforeDay,
.afterDay {
  width: 200rpx;
  height: 100%;
  display: flex;
  align-items: center;
  background-color: #0054BD;
  justify-content: center;
  border-radius: 10rpx;
  color: #fff;
}

.dayicon {
  margin-top: -14rpx;
}

.beforeDay .dayText {
  margin-left: 16rpx;
}

.afterDay .dayText {
  margin-right: 16rpx;
}