/* 日期 */
.con {
  display: flex;
  flex-direction: row-reverse;
}

.con .device {
  width: 400rpx;
  height: 60rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.iconNone {
  display: none;
}

.device input {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  border: 1px solid #c9c9c9;
  background: #f8f8f8;
  padding: 0 20rpx;
}

.device icon {
  position: absolute;
  right: 16rpx;
  top: -4rpx;
  color: #808080;
}

.equipmentWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 34rpx;
}

.equipment {
  width: 720rpx;
  height: 340rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 24rpx;
  padding: 10rpx 17rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 5px 5px 2px #ddd;
}

.equipment_child {
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.equipment_child:last-child {
  padding-right: 80rpx;
}

.equipment_item {
  height: 72rpx;
  line-height: 72rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

